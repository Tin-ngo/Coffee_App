<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_TTthunhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thu Nhập Của: "
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/txt_tong_thunhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tổng thu ngày hôm nay là"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_TTthunhap"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/lbl_chitiet"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết: "
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/txt_tong_thunhap"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ListView
        android:id="@+id/listview_dialog_tn"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_chitiet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/submitButton_tn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xong"
        android:backgroundTint="#26C6DA"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/listview_dialog_tn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>