<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="30dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_banmay_detailnuoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn Nước Bàn ?"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/txt_tennuoc_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên nước"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_banmay_detailnuoc"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/txt_soluong_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_tennuoc_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/txt_giatien_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_soluong_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/txt_Tongtien_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_giatien_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        />



    <Button
        android:id="@+id/btn_xong_detailnuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xong"
        android:backgroundTint="#26C6DA"
        android:padding="10dp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/txt_Tongtien_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>