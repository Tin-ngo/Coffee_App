<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_nuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên nước"
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/img_2"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_KQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/txt_idNuoc_hidden"
        app:layout_constraintLeft_toRightOf="@+id/img_2"
        />

    <TextView
        android:id="@+id/txt_idNuoc_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_2"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/txt_idBan_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IDBan"
        app:layout_constraintLeft_toRightOf="@+id/img_2"
        app:layout_constraintBottom_toTopOf="@+id/txt_idNuoc_hidden"
        android:visibility="invisible"
        />
<!--    android:visibility="invisible"  ẩn -->

    <ImageView
        android:id="@+id/tru1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_2"
        android:layout_marginLeft="60dp"
        />

    <TextView
        android:id="@+id/txt_soluong"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tru1"
        />


    <ImageView
        android:id="@+id/cong1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_soluong"
        android:src="@drawable/ic_right"
        />

    <Button
        android:id="@+id/btn_luu_nuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        app:layout_constraintLeft_toRightOf="@+id/cong1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_xoa_nuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xoá"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/btn_luu_nuoc"
        app:layout_constraintLeft_toRightOf="@+id/cong1"
        />






</androidx.constraintlayout.widget.ConstraintLayout>